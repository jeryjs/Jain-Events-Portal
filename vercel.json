{
    "version": 2,
    "builds": [
        {
            "src": "backend/dist/backend/index.js",
            "use": "@vercel/node",
            "config": { 
                "includeFiles": ["./backend/dist/**"]
            }
        },
        {
            "src": "clientview/package.json",
            "use": "@vercel/static-build",
            "config": {
                "outDir": "./clientview/dist"
            }
        }
    ],
    "routes": [
        {
            "src": "/api(/?.*)",
            "dest": "/backend/dist/backend/index.js"
        },
        {
            "src": "/(.*)",
            "dest": "/clientview/$1"
        }
    ]
}