{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "paths": {
            "@common/*": ["../common/*"],
            "@config/*": ["./config/*"],
            "@middlewares/*": ["./middlewares/*"],
            "@routes/*": ["./routes/*"],
            "@services/*": ["./services/*"],
            "@utils/*": ["./utils/*"]
        },
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    }
}